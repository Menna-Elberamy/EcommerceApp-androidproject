<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProductDetailsFragment">

   <ImageView
       android:id="@+id/product_details_iv"
       android:scaleType="fitXY"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/desctitle_detail_tv"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginStart="8dp"
       android:layout_marginEnd="8dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="20dp"
       android:background="@drawable/ic_launcher_background"
       />
    <TextView
        android:id="@+id/desctitle_detail_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/product_details_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        android:text="ProductDesc"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/fulldesctitle_detail_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/desctitle_detail_tv"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        android:text="ProductDetails "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/fulldesctitle_detail_tv"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/price_detail_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        android:text="200"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/price_detail_tv"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/desc_detail_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        app:layout_constraintBottom_toTopOf="@+id/addtocart_btn"
        android:text="product desc"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/addtocart_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/product_details_iv"
        app:layout_constraintEnd_toEndOf="@id/product_details_iv"
        app:layout_constraintTop_toBottomOf="@+id/desc_detail_tv"
        android:text="add to cart"
        android:backgroundTint="@color/black"
        android:layout_marginBottom="70dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>